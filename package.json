{
  "name": "editlayer-cms",
  "description": "Editlayer is headless CMS that saves content as JSON",
  "version": "0.6.1",
  "private": true,
  "scripts": {
    "init": "npm install && cd functions && npm install",
    "serve": "vue-cli-service serve --port 8000 --open",
    "deploy": "node scripts/deploy.js",
    "cors": "node scripts/cors.js",
    "open": "node scripts/open.js",
    "archive": "git archive --format=zip --output=editlayer-archive.zip HEAD"
  },
  "dependencies": {
    "@jaames/iro": "^3.4.3",
    "animejs": "^2.2.0",
    "autosize": "^4.0.2",
    "axios": "^0.18.0",
    "blob-util": "^2.0.2",
    "caret-pos": "^1.1.0",
    "copy-to-clipboard": "^3.0.8",
    "dayjs": "^1.7.5",
    "firebase": "^5.3.1",
    "image-compressor.js": "^1.1.4",
    "is-upper-case": "^1.1.2",
    "js-base64": "^2.4.8",
    "js-video-url-parser": "^0.2.7",
    "lodash": "^4.17.10",
    "nanoid": "^1.2.0",
    "parse-json": "^4.0.0",
    "slugg": "^1.2.1",
    "title-case": "^2.1.1",
    "typeface-open-sans": "0.0.54",
    "v-calendar": "^0.9.7",
    "vue": "^2.5.17",
    "vue-awesome": "^3.1.0",
    "vue-codemirror": "^4.0.5",
    "vue-quill-editor": "^3.0.6",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@vue/cli": "^3.0.0",
    "@vue/cli-plugin-babel": "^3.0.0",
    "@vue/cli-plugin-eslint": "^3.0.0",
    "@vue/cli-service": "^3.0.0",
    "@vue/eslint-config-standard": "^3.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-preset-env": "^1.7.0",
    "firebase-tools": "^4.0.3",
    "node-sass": "^4.9.3",
    "opn": "^5.3.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.17"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "brace-style": [
        "error",
        "stroustrup"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
